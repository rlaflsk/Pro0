<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myapp.jln.pro0.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text_title"
        android:id="@+id/textView"
        android:layout_marginTop="10pt"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/main_button_movie"
        android:id="@+id/buttonMovie"
        android:layout_gravity="center_horizontal"
        style="@style/MyButton" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/main_button_share"
        android:id="@+id/buttonShare"
        android:layout_gravity="center_horizontal"
        style="@style/MyButton" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/main_button_reader"
        android:id="@+id/buttonReader"
        android:layout_gravity="center_horizontal"
        style="@style/MyButton" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/main_button_news"
        android:id="@+id/buttonNews"
        android:layout_gravity="center_horizontal"
        style="@style/MyButton" />

    <Button
        android:layout_height="wrap_content"
        android:text="@string/main_button_graduate"
        android:id="@+id/buttonGraduate"
        android:layout_gravity="center_horizontal"
        style="@style/MyButton" />
</LinearLayout>
